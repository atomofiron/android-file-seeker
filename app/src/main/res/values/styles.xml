<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/day_night_primary</item>
		<item name="colorPrimaryDark">@color/day_night_primary</item><!--3700B3-->
		<item name="colorPrimaryLite">@color/day_night_primary_lite</item>
		<item name="colorAccent">@color/day_night_primary</item><!--03DAC5-->
		<item name="android:colorBackground">@color/day_night_background</item>
		<item name="android:windowBackground">@color/day_night_background</item>
		<item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
		<item name="cardBackgroundColor">@color/day_night_card_background</item>
		<item name="android:clipToPadding">false</item>

		<item name="colorContent">@color/day_night_content</item>
		<item name="colorSecondary">@color/day_night_secondary</item>
		<item name="colorPositive">@color/day_night_positive</item>
		<item name="colorNegative">@color/day_night_negative</item>
		<item name="colorRipple">@color/day_night_ripple</item>

		<item name="colorBackground">@color/day_night_background</item>
		<item name="colorFieldBackground">@color/day_night_background</item>
		<item name="colorCardBackground">@color/day_night_card_background</item>
		<item name="colorFieldDivider">@color/day_night_field_divider</item>
		<item name="colorBone">@color/day_night_bone</item>
		<item name="colorOverlay">@color/day_night_overlay</item>
        <item name="colorShadow">@color/day_night_shadow</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/isDayTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/isDayTheme</item>

        <item name="isDarkTheme">@bool/isNightTheme</item>

        <item name="cardViewStyle">@style/CardViewStyle</item>
	</style>

	<style name="AppTheme.Amoled" parent="@style/AppTheme">
		<item name="android:windowBackground">@color/day_night_background_amoled</item>
		<item name="android:colorBackground">@color/day_night_background_amoled</item>
		<item name="colorBackground">@color/day_night_background_amoled</item>
		<item name="colorFieldBackground">@color/day_night_card_background_amoled</item>
		<item name="colorCardBackground">@color/day_night_card_background_amoled</item>
		<item name="colorFieldDivider">@color/day_night_field_divider_amoled</item>
	</style>

	<style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="isDarkTheme">false</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:windowBackground">@color/white</item>
		<item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
		<item name="cardBackgroundColor">@color/card_background_light</item>
		<item name="android:colorPrimary">@color/primary_light</item>
		<item name="android:colorPrimaryDark">@color/primary_light</item>
		<item name="android:colorAccent">@color/accent_light</item>
		<item name="android:colorControlHighlight">@color/accent_light</item>
		<item name="colorPrimary">@color/primary_light</item>
		<item name="colorPrimaryDark">@color/primary_light</item>
		<item name="colorAccent">@color/accent_light</item>
		<item name="colorControlHighlight">@color/accent_light</item>

		<item name="colorContent">@color/grey_dark</item>
		<item name="colorSecondary">@color/grey_dark_lite</item>
		<item name="colorPositive">@color/black</item>
		<item name="colorNegative">@color/white</item>
		<item name="colorRipple">@color/ripple_light</item>

		<item name="colorBackground">@color/white</item>
		<item name="colorFieldBackground">@color/grey_light</item>
		<item name="colorCardBackground">@color/white</item>
		<item name="colorFieldDivider">@color/grey_light</item>
		<item name="colorBone">@color/grey_light</item>
		<item name="colorOverlay">@color/overlay_black</item>
        <item name="colorShadow">@color/shadow_light</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
	</style>
	<style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="isDarkTheme">true</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
