<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="CompatTheme" parent="@style/AppTheme.Legacy" />

	<style name="CompatTheme.Amoled" parent="@style/AppTheme.Amoled.Legacy" />

	<style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">@integer/cutoutMode</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>

		<item name="colorContent">@color/day_night_content</item>

		<item name="colorBackground">?android:attr/colorBackground</item>
		<item name="colorFieldBackground">@color/day_night_background</item>
		<item name="colorFieldDivider">@color/day_night_field_divider</item>
		<item name="colorOverlay">@color/overlay_black</item>
		<item name="topRadioGroupBackground">@color/surface_variant_lite</item>
		<item name="isBlackDeep">false</item>

		<item name="android:statusBarColor">@color/status_bar</item>
		<item name="android:navigationBarColor">@color/navigation_bar</item>
		<item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/transparent</item>
		<item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
		<item name="android:windowLightStatusBar" tools:targetApi="23">@bool/isDayTheme</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/isDayTheme</item>

		<item name="isDarkTheme">@bool/isNightTheme</item>
		<item name="materialCardViewStyle">@style/CardViewStyle</item>
		<item name="chipStyle">@style/ChipStyle</item>
		<item name="materialButtonOutlinedStyle">@style/OutlinedButtonStyle</item>
		<item name="textInputStyle">@style/TextInputLayoutOutlinedBox</item>
		<item name="textInputOutlinedDenseStyle">@style/TextInputLayoutOutlinedBox.Dense</item>

		<item name="colorControlHighlight" tools:ignore="PrivateResource">@color/mtrl_btn_text_btn_ripple_color</item>
		<item name="strokeColor">?colorSurfaceVariant</item>
	</style>

	<style name="AppTheme.Legacy" parent="@style/AppTheme">
		<item name="colorPrimary">@color/md_theme_light_primary</item>
		<item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
		<item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
		<item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
		<item name="colorSecondary">@color/md_theme_light_secondary</item>
		<item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
		<item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
		<item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
		<item name="colorTertiary">@color/md_theme_light_tertiary</item>
		<item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
		<item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
		<item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
		<item name="colorError">@color/md_theme_light_error</item>
		<item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
		<item name="colorOnError">@color/md_theme_light_onError</item>
		<item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
		<item name="android:colorBackground">@color/md_theme_light_background</item>
		<item name="colorOnBackground">@color/md_theme_light_onBackground</item>
		<item name="colorSurface">@color/md_theme_light_surface</item>
		<item name="colorOnSurface">@color/md_theme_light_onSurface</item>
		<item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
		<item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
		<item name="colorOutline">@color/md_theme_light_outline</item>
		<item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
		<item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
		<item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
		<item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
	</style>

	<style name="AppTheme.Amoled" parent="@style/AppTheme">
		<item name="android:windowBackground">@color/day_night_background_amoled</item>
		<item name="android:colorBackground">@color/day_night_background_amoled</item>
		<item name="colorBackground">@color/day_night_background_amoled</item>
		<item name="colorFieldBackground">@color/day_night_card_background_amoled</item>
		<item name="colorFieldDivider">@color/day_night_field_divider_amoled</item>
		<item name="topRadioGroupBackground">@color/black</item>
		<item name="isBlackDeep">true</item>

		<item name="materialCardViewStyle">@style/CardViewStyle.Amoled</item>
		<item name="appBarLayoutStyle">@style/AppBarLayoutStyle.Amoled</item>
		<item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarLayoutStyle.Amoled</item>
	</style>

	<style name="AppTheme.Amoled.Legacy" parent="@style/AppTheme.Legacy">
		<item name="android:windowBackground">@color/day_night_background_amoled</item>
		<item name="android:colorBackground">@color/day_night_background_amoled</item>
		<item name="colorBackground">@color/day_night_background_amoled</item>
		<item name="colorFieldBackground">@color/day_night_card_background_amoled</item>
		<item name="colorFieldDivider">@color/day_night_field_divider_amoled</item>
		<item name="topRadioGroupBackground">@color/black</item>
		<item name="isBlackDeep">true</item>

		<item name="materialCardViewStyle">@style/CardViewStyle.Amoled</item>
		<item name="appBarLayoutStyle">@style/AppBarLayoutStyle.Amoled</item>
		<item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarLayoutStyle.Amoled</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

	<style name="CardViewStyle" parent="@style/Widget.Material3.CardView.Elevated" />

	<style name="CardViewStyle.Amoled" parent="@style/Widget.Material3.CardView.Elevated" />

	<style name="AppBarLayoutStyle.Amoled" parent="@style/Widget.Material3.AppBarLayout" />

	<style name="CollapsingToolbarLayoutStyle.Amoled" parent="@style/Widget.Material3.CollapsingToolbar.Large" />

	<style name="OutlinedButtonStyle" parent="@style/Widget.Material3.Button.OutlinedButton">
		<item name="strokeColor">@color/stroke</item>
	</style>

	<style name="ChipStyle" parent="@style/Widget.Material3.Chip.Assist">
		<item name="chipStrokeColor">@color/stroke</item>
		<item name="chipIconTint">@color/m3_chip_text_color</item>
	</style>

	<style name="TextInputLayoutOutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
		<item name="boxStrokeColor">@color/bg_edit_text_outlined</item>
		<item name="shapeAppearance">@style/ShapeAppearance.Corners</item>
	</style>

	<style name="TextInputLayoutOutlinedBox.Dense" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense" />

	<style name="ShapeAppearance.Corners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">8dp</item>
	</style>

</resources>
