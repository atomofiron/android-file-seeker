	<style name="AppTheme.Black" parent="@style/AppTheme.Dark">
		<item name="android:colorBackground">@color/black</item>
		<item name="android:windowBackground">@color/black</item>

		<item name="colorBackground">@color/black</item>
		<item name="colorFieldBackground">@color/grey_dark_13</item>
		<item name="colorCardBackground">@color/grey_dark_13</item>
		<item name="colorFieldDivider">@color/grey_dark_13</item>
	</style>

