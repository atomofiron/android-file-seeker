		<item name="colorPrimary">@color/primary_dark</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent_dark</item>
		<item name="colorControlHighlight">@color/accent_dark</item>

		<item name="colorContent">@color/grey_light</item>
		<item name="colorSecondary">@color/grey_light_lite</item>
		<item name="colorPositive">@color/white</item>
		<item name="colorNegative">@color/black</item>
		<item name="colorRipple">@color/ripple_dark</item>

		<item name="colorBackground">@color/grey_dark_13</item>
		<item name="colorFieldBackground">@color/grey_dark_21</item>
