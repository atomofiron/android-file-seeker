<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item><!--3700B3-->
		<item name="colorPrimaryLite">@color/colorPrimaryLite</item>
		<item name="colorAccent">@color/colorPrimary</item><!--03DAC5-->
		<item name="android:colorBackground">@color/colorBackgroundDayNight</item>
		<item name="android:windowBackground">@color/windowBackgroundThemed</item>
		<item name="cardBackgroundColor">@color/cardBackgroundColor</item>
		<item name="android:clipToPadding">false</item>


		<item name="colorBackground">@color/windowBackgroundThemed</item>
        <item name="colorShadow">@color/shadow_day_night</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent_navigation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/isDayTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/isDayTheme</item>

        <item name="isDarkTheme">@bool/isNightTheme</item>

        <item name="cardViewStyle">@style/CardViewStyle</item>
	</style>

	<style name="AppTheme.Amoled" parent="@style/AppTheme">
		<item name="android:windowBackground">@color/windowBackgroundThemedAmoled</item>
		<item name="colorBackground">@color/windowBackgroundThemedAmoled</item>
	</style>

	<style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="isDarkTheme">false</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:windowBackground">@color/windowBackgroundThemed</item>
		<item name="cardBackgroundColor">@color/cardBackgroundColorLight</item>
		<item name="android:colorPrimary">@color/colorPrimaryLight</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryLight</item>
		<item name="android:colorAccent">@color/colorAccentLight</item>
		<item name="android:colorControlHighlight">@color/colorAccentLight</item>
		<item name="colorPrimary">@color/colorPrimaryLight</item>
		<item name="colorPrimaryDark">@color/colorPrimaryLight</item>
		<item name="colorAccent">@color/colorAccentLight</item>
		<item name="colorControlHighlight">@color/colorAccentLight</item>

		<item name="colorContent">@color/grey_dark</item>
		<item name="colorSecondary">@color/grey_dark_lite</item>
		<item name="colorPositive">@color/black</item>
		<item name="colorNegative">@color/windowBackgroundWhite</item>
		<item name="colorRipple">@color/colorRippleLight</item>

		<item name="colorBackground">@color/windowBackgroundWhite</item>
		<item name="colorFieldBackground">@color/grey_light</item>
		<item name="colorCardBackground">@color/windowBackgroundWhite</item>
		<item name="colorFieldDivider">@color/grey_light</item>
		<item name="colorBone">@color/grey_light</item>
		<item name="colorOverlay">@color/overlay_black</item>

		<item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>

        <item name="colorShadow">@color/shadow_light</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent_navigation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
	</style>
	<style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="isDarkTheme">true</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:windowBackground">@color/windowBackgroundThemed</item>
		<item name="cardBackgroundColor">@color/cardBackgroundColorDark</item>
		<item name="android:colorPrimary">@color/colorPrimaryDark</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccentDark</item>
		<item name="android:colorControlHighlight">@color/colorAccentDark</item>
		<item name="colorPrimary">@color/colorPrimaryDark</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccentDark</item>
		<item name="colorControlHighlight">@color/colorAccentDark</item>

		<item name="colorContent">@color/grey_light</item>
		<item name="colorSecondary">@color/grey_light_lite</item>
		<item name="colorPositive">@color/white</item>
		<item name="colorNegative">@color/windowBackgroundDark</item>
		<item name="colorRipple">@color/colorRippleDark</item>

		<item name="colorBackground">@color/windowBackgroundDark</item>
		<item name="colorFieldBackground">@color/windowBackgroundDarkLight</item>
		<item name="colorCardBackground">@color/windowBackgroundDarkLight</item>
		<item name="colorFieldDivider">@color/windowBackgroundDark</item>
		<item name="colorBone">@color/windowBackgroundDarkLight</item>
		<item name="colorOverlay">@color/overlay_colored</item>

		<item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>

        <item name="colorShadow">@color/shadow_dark</item>

		<item name="android:statusBarColor">@color/transparent</item>
		<item name="android:navigationBarColor">@color/transparent_navigation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
	</style>
	<style name="AppTheme.Black" parent="@style/AppTheme.Dark">
		<item name="android:windowBackground">@color/windowBackgroundBlack</item>

		<item name="colorBackground">@color/windowBackgroundBlack</item>
		<item name="colorFieldBackground">@color/windowBackgroundDark</item>
		<item name="colorCardBackground">@color/windowBackgroundDark</item>
		<item name="colorFieldDivider">@color/windowBackgroundBlack</item>

		<item name="colorShadow">@color/shadow_dark</item>

		<item name="android:statusBarColor">@color/transparent</item>
		<item name="android:navigationBarColor">@color/transparent_navigation</item>
		<item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

	<!--<style name="AppCompat.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>-->

	<style name="CardViewStyle" parent="CardView">
		<item name="cardBackgroundColor">?cardBackgroundColor</item>
	</style>

</resources>
