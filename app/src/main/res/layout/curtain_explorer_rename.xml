<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/explorer_rename_item"
        layout="@layout/item_explorer"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/explorer_create_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_half"
        android:layout_margin="@dimen/common_margin"
        android:hint="@string/a_name"
        >
        <app.atomofiron.searchboxapp.custom.view.AutoHideKeyboardField
            android:id="@+id/explorer_rename_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/explorer_rename_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/common_margin"
        android:text="@string/rename"
        app:cornerRadius="@dimen/infinity"
        />
</LinearLayout>