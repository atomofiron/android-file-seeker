<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_half">

    <app.atomofiron.searchboxapp.custom.view.BallsView
        android:id="@+id/item_explorer_ps"
        android:layout_width="@dimen/common_size"
        android:layout_height="@dimen/common_size"
        app:oneBall="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/progress_tv_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="36/96"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/progress_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/look"
        android:textColor="?attr/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_explorer_ps"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/progress_btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:paddingHorizontal="@dimen/common_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_explorer_ps"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>