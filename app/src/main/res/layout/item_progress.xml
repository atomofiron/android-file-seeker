<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_semi"
    android:paddingHorizontal="@dimen/padding_double"
    >
    <app.atomofiron.searchboxapp.custom.view.MuonsView
        android:id="@+id/progress"
        android:layout_width="@dimen/common_size"
        android:layout_height="@dimen/common_size"
        app:fillCenter="false"
        app:layout_constraintStart_toStartOf="@+id/label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/label"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/params"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_common"
        android:textColor="?attr/colorContent"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="[ ] [ ] query"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label"
        app:layout_constraintBottom_toTopOf="@+id/status"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorContent"
        tools:text="[ ] 144 [ ]36 [ ]96"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/params"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/status"
        app:layout_constraintEnd_toStartOf="@+id/label"
        app:layout_constraintBottom_toBottomOf="@+id/status"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_double"
        android:text="@string/open"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintEnd_toStartOf="@+id/action"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:paddingHorizontal="@dimen/padding_common"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.Material3.Button.OutlinedButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>