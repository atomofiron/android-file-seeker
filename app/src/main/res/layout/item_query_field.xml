<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <include
        android:id="@+id/query_field"
        layout="@layout/item_text_field"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button"
        android:layout_width="@dimen/common_size"
        android:layout_height="@dimen/common_size"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/padding_semi"
        android:layout_marginEnd="@dimen/padding_semi"
        android:background="@drawable/query_button"
        android:src="@drawable/ic_find"
        android:tint="?colorPrimary"
        style="@style/Widget.Material3.Button.TonalButton"
        />
</FrameLayout>