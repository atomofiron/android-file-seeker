<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_common"
    >
    <LinearLayout
        android:id="@+id/demo_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/padding_common"
        app:layout_constraintTop_toTopOf="parent"
        >
        <include
            android:id="@+id/preference_explorer_dir"
            layout="@layout/item_explorer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <include
            android:id="@+id/preference_explorer_file"
            layout="@layout/item_explorer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_half"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demo_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/date"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/time"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="drwxrwx---"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/owner"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/group"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/item_explorer_details"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/size"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/empty_check_box"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_semi"
            android:text="@string/item_explorer_background"
            />
    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>