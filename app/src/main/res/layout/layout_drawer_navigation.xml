<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_rv"
        android:paddingTop="36dp"
        android:paddingBottom="@dimen/bottom_tab_bar_height"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <LinearLayout
        android:id="@+id/drawer_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBackground"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drawer_title"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:textColor="?attr/colorAccent"
            android:paddingStart="44dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tool:text="Title"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/drawer_ib_dock_side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dock_end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingEnd="12dp"
            android:tint="?attr/colorContent"
            android:alpha="0.5"
            />
    </LinearLayout>
</FrameLayout>