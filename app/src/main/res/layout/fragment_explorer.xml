<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground"
    >
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/explorer_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </androidx.viewpager2.widget.ViewPager2>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/explorer_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="?topRadioGroupBackground"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@null"
        >
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/first_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/second_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/nav_explorer"
        app:itemTextColor="?android:textColorPrimary"
        app:itemIconTint="?android:textColorPrimary"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigation_rail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_explorer"
        app:labelVisibilityMode="unlabeled"
        app:itemTextColor="?android:textColorPrimary"
        app:itemIconTint="?android:textColorPrimary"
        app:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
