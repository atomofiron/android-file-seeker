<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:id="@+id/card_thumbnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/compact_column_min_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        />
    <View
        android:id="@+id/card_arc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@+id/card_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/card_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/card_thumbnail"
        app:layout_constraintBottom_toBottomOf="@+id/card_thumbnail"
        />
    <View
        android:id="@+id/card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin_half"
        app:layout_constraintStart_toEndOf="@+id/card_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
