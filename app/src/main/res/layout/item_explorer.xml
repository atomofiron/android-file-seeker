<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_explorer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_explorer"
    android:paddingVertical="1dp"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/edge_size"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/ic_explorer_folder"
        android:foregroundGravity="top"
        android:paddingStart="@dimen/padding_common"
        android:paddingEnd="@dimen/padding_half"
        android:baseline="19dp"
        android:translationX="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/barrier_start"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginStart="@dimen/padding_common"
        android:layout_marginEnd="@dimen/padding_half"
        android:scaleType="centerCrop"
        android:background="@drawable/clip_item_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/barrier_start"
        app:layout_constraintBottom_toBottomOf="@+id/description"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="icon,thumbnail"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="26sp"
        android:layout_marginEnd="@dimen/edge_size"
        android:ellipsize="middle"
        android:maxLines="1"
        android:textSize="18sp"
        android:gravity="bottom"
        android:textStyle="bold"
        android:textColor="?attr/colorContent"
        android:textDirection="locale"
        app:layout_constraintStart_toEndOf="@+id/barrier_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Android"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="19sp"
        android:textSize="12sp"
        android:typeface="monospace"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/barrier_start"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@+id/details"
        app:layout_goneMarginEnd="@dimen/edge_size"
        tools:text="0000-00-00 00:00 -rwxrwxrwx atomofiron everybody"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="19sp"
        android:layout_marginEnd="@dimen/edge_size"
        android:textSize="12sp"
        android:typeface="monospace"
        android:maxLines="1"
        android:ellipsize="middle"
        android:paddingHorizontal="@dimen/padding_mini"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1080x2600-00:01:00"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="@dimen/padding_micro"
        android:textColor="?colorError"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_goneMarginTop="@dimen/padding_common"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="No such file or directory"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="19sp"
        android:layout_gravity="end"
        android:paddingEnd="@dimen/padding_common"
        android:textSize="12sp"
        android:typeface="monospace"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="000K"
        />
    <app.atomofiron.searchboxapp.custom.view.MuonsView
        android:id="@+id/progress"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginTop="@dimen/padding_mini"
        app:layout_constraintStart_toStartOf="@+id/check_box"
        app:layout_constraintTop_toTopOf="@+id/check_box"
        app:layout_constraintEnd_toEndOf="@+id/check_box"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_box"
        android:layout_width="@dimen/edge_size"
        android:layout_height="@dimen/edge_size"
        android:layout_marginTop="-2dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>