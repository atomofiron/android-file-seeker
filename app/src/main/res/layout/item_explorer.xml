<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_explorer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="1dp"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_explorer_iv_icon"
        android:layout_width="@dimen/edge_size"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/ic_explorer_folder"
        android:foregroundGravity="top"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="@dimen/common_margin_half"
        android:baseline="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_explorer_tv_title"
        app:layout_constraintEnd_toStartOf="@+id/barrier_start"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_explorer_iv_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin_half"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_explorer_picture"
        android:background="@drawable/clip_item_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/barrier_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="item_explorer_iv_icon,item_explorer_iv_thumbnail"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_explorer_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorContent"
        app:layout_constraintStart_toEndOf="@+id/barrier_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_explorer_cb"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        tools:text="Android"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_explorer_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:textSize="12sp"
        android:typeface="monospace"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/barrier_start"
        app:layout_constraintTop_toBottomOf="@id/item_explorer_tv_title"
        app:layout_constraintEnd_toStartOf="@+id/item_explorer_tv_date"
        tools:text="-rwxrwxrwx atomofiron everybody"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_explorer_error_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/danger_red"
        app:layout_constraintStart_toStartOf="@+id/item_explorer_tv_description"
        app:layout_constraintTop_toBottomOf="@+id/item_explorer_tv_description"
        android:layout_marginBottom="2dp"
        app:layout_goneMarginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="No such file or directory"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_explorer_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@id/item_explorer_tv_title"
        app:layout_constraintEnd_toStartOf="@+id/barrier_end"
        tools:text="0000-00-00 00:00"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="item_explorer_tv_size,item_explorer_cb"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_explorer_tv_size"
        android:layout_width="@dimen/edge_size"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="@dimen/common_margin_half"
        android:textSize="12sp"
        android:typeface="monospace"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/item_explorer_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="000KB"
        />
    <app.atomofiron.searchboxapp.custom.view.BallsView
        android:id="@+id/item_explorer_ps"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        app:oneBall="false"
        app:layout_constraintStart_toStartOf="@+id/item_explorer_cb"
        app:layout_constraintTop_toTopOf="@+id/item_explorer_cb"
        app:layout_constraintEnd_toEndOf="@+id/item_explorer_cb"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_explorer_cb"
        android:layout_width="@dimen/edge_size"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:minHeight="@dimen/item_explorer_min_height"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>