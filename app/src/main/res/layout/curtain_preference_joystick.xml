<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_tab_bar_height"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/preference_joystick_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/curtain_title_margin"
        android:layout_marginBottom="@dimen/common_margin_half"
        android:textSize="@dimen/curtain_title_size"
        android:textColor="?attr/colorContent"
        android:textStyle="bold"
        android:typeface="monospace"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/preference_sb_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:max="255"
        android:background="@color/item_explorer_background"
        />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/preference_sb_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:max="255"
        />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/preference_sb_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:max="255"
        android:background="@color/item_explorer_background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_inv_for_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inverse_for_dark"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_xlarge"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_inv_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inverse_glowing"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_xlarge"
            />
    </LinearLayout>
</LinearLayout>