<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_common"
        android:gravity="center_horizontal"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/preference_joystick_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/curtain_title_margin"
            android:layout_marginBottom="@dimen/padding_half"
            android:layout_gravity="start"
            android:textSize="@dimen/curtain_title_size"
            android:textColor="?attr/colorContent"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:text="#ff5252"
            />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_semi"
            android:max="255"
            android:background="@color/item_explorer_background"
            />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_semi"
            android:max="255"
            />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_semi"
            android:max="255"
            android:background="@color/item_explorer_background"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/inv_for_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inverse_for_dark"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/inv_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inverse_glowing"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haptic_effect"
            android:layout_marginTop="@dimen/padding_half"
            />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/haptic_scale"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_half"
            android:paddingVertical="@dimen/padding_half"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/by_default"
            style="?materialButtonOutlinedStyle"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>