<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_common"
        android:gravity="center_horizontal"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_common"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_gravity="start"
                android:textSize="@dimen/curtain_title_size"
                android:textColor="?attr/colorContent"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="#ff5252"
                />
            <TextView
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_common"
                android:text="R"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/red"
                app:layout_constraintBottom_toBottomOf="@+id/red"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/r"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_common"
                android:text="G"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/green"
                app:layout_constraintBottom_toBottomOf="@+id/green"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                app:layout_constraintTop_toBottomOf="@+id/red"
                app:layout_constraintStart_toEndOf="@+id/g"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_common"
                android:text="B"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/blue"
                app:layout_constraintBottom_toBottomOf="@+id/blue"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                app:layout_constraintTop_toBottomOf="@+id/green"
                app:layout_constraintStart_toEndOf="@+id/b"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_half"
            app:justifyContent="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/inv_for_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_mini"
                android:text="@string/inverse_for_dark"
                android:checkable="true"
                tools:chipIcon="@drawable/ic_check_box_outline"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/inv_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_mini"
                android:text="@string/inverse_glow"
                android:checkable="true"
                app:chipIconEnabled="true"
                tools:chipIcon="@drawable/ic_check_box_outline"
                />
        </com.google.android.flexbox.FlexboxLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/padding_common"
            android:layout_marginVertical="@dimen/padding_half"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_common"
                android:text="@string/haptic_effect"
                android:textStyle="bold"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/haptic_scale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/padding_half"
                android:valueTo="3"
                android:stepSize="1"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/by_default"
            style="?materialTonalButton"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>