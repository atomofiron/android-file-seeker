<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_common"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_common"
            android:layout_marginBottom="@dimen/padding_half"
            android:orientation="vertical"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/preference_joystick_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/curtain_title_margin"
                android:layout_marginBottom="@dimen/padding_half"
                android:layout_gravity="start"
                android:textSize="@dimen/curtain_title_size"
                android:textColor="?attr/colorContent"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:text="#ff5252"
                />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                android:background="#10ff0000"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/sb_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                android:background="#1000ff00"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/sb_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:valueTo="255"
                android:background="#100000ff"
                />
        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/inv_for_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_mini"
                android:text="@string/inverse_for_dark"
                android:checkable="true"
                tools:chipIcon="@drawable/ic_check_box_outline"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/inv_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_mini"
                android:text="@string/inverse_glow"
                android:checkable="true"
                app:chipIconEnabled="true"
                tools:chipIcon="@drawable/ic_check_box_outline"
                />
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haptic_effect"
            android:layout_marginTop="@dimen/padding_half"
            />
        <com.google.android.material.slider.Slider
            android:id="@+id/haptic_scale"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_half"
            android:paddingVertical="@dimen/padding_half"
            android:valueTo="3"
            android:stepSize="1"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/by_default"
            style="?materialTonalButton"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>