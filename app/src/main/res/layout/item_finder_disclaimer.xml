<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_margin_half"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_half"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:tint="?attr/colorContent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/finder_tv_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_half"
            android:textColor="?attr/colorContent"
            android:text="@string/fix_android_12"
            android:textSize="16sp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>